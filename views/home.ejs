<%- include("./partials/head") %>

<% if (locals.admin) { %>
  <section class="py-5">
    <div class="container">
      <h1 class="mb-4">Stats</h1>
      <div class="row g-4">
        <div class="col-sm-6 col-lg-3">
          <div class="p-4 bg-primary text-white rounded shadow">
            <h2><%= totalOrders %></h2>
            <p>Total Orders</p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="p-4 bg-success text-white rounded shadow">
            <h2><%= totalUsers %></h2>
            <p>Total Users</p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="p-4 bg-warning text-white rounded shadow">
            <h2>₹<%= totalRevenue %></h2>
            <p>Revenue</p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="p-4 bg-info text-white rounded shadow">
            <h2><%= totalProducts %></h2>
            <p>Products</p>
          </div>
        </div>
      </div>
    </div>
  </section>

<% } else { %>
    <!-- Hero Section -->
<section class="py-5 text-white bg-primary bg-gradient">
  <div class="container text-center">
    <h1 class="display-4 fw-bold">Welcome to Shopify</h1>
    <p class="lead">Discover amazing products at unbeatable prices.</p>
    <a href="#products" class="btn btn-light btn-lg px-4 shadow-sm">Shop Now</a>
  </div>
</section>

<!-- Products Section -->
<section id="products" class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center fw-bold mb-4">Featured Products</h2>
    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <a href="/product/<%= product._id %>" class="text-decoration-none text-dark">
            <div class="card h-100 border-0 shadow-sm rounded-4 product-card position-relative">
              <img 
                src="<%= product.image.url %>" 
                class="card-img-top rounded-top-4" 
                alt="<%= product.name %>"
                style="object-fit: cover; height: 200px;"
              >
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-semibold"><%= product.name %></h5>
                <p class="fs-5 text-success mb-3 fw-bold">₹<%= product.price %></p>
                <div class="mt-auto">
                  <button 
                    onclick="event.stopPropagation(); event.preventDefault(); addToCart('<%= product._id %>')" 
                    class="btn btn-outline-primary w-100 shadow-sm"
                  >
                    <i class="bi bi-cart-plus me-1"></i> Add to Cart
                  </button>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</section>



<% } %>


<%- include("./partials/footer") %>
