<%- include("../partials/head.ejs") %>

<div class="container pt-4">
    <h1 class="text-center">Add Product</h1>
    <% if (locals.errors) { %>
        
        <% errors.forEach(error => { %>
            <div class="alert alert-danger" role="alert">
                <%= error.msg %>
            </div>
            
        <% }) %>
        
    <% } %>
    <form action="/product" method="post" enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" value="<%= locals.formData ? locals.formData.name : '' %>" class="form-control" id="name">
            
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <input type="text" name="category" value="<%= locals.formData ? locals.formData.category : '' %>" class="form-control" id="category">
            
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" class="form-control" id="description"><%= locals.formData ? locals.formData.description : '' %></textarea>
            
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="price" value="<%= locals.formData ? locals.formData.price : '' %>" class="form-control" id="price">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="image" class="form-control" id="image">
                <% if (locals.image) { %>
                    <p>Previously Uploaded Image: <%= locals.image %></p>
                <% } %>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
</div>


<%- include("../partials/footer.ejs") %>