<%- include("../partials/head.ejs") %>

<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm rounded-4">
          <div class="card-body p-5">

            <!-- Profile Header -->
            <div class="text-center mb-4">
              <img src="<%= user.profileImageUrl || '/images/avatar.png' %>" alt="Avatar"
                   class="rounded-circle shadow" width="120" height="120">
              <h3 class="mt-3 fw-semibold"><%= user.fullName %></h3>
              <p class="text-muted"><%= user.email %></p>
            </div>

            <!-- User Info -->
            <div class="mb-4">
              <h5 class="fw-bold">Contact Details</h5>
              <hr>
              <p><strong>Mobile:</strong> <%= user.mobile || 'Not Provided' %></p>
              <p><strong>Address:</strong> <%= user.address || 'Not Provided' %></p>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-between">
              <a href="/user/edit-profile" class="btn btn-outline-primary px-4">Edit Profile</a>
              <a href="/user/cart/orders" class="btn btn-outline-success px-4">View Orders</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("../partials/footer.ejs") %>
