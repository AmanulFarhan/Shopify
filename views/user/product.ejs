<section>
  <div class="container mt-5">
    <div class="row align-items-center">
      
      <!-- Product Image -->
      <div class="col-md-6 text-center mb-4">
        <img src="<%= product.image.url %>" class="img-fluid rounded shadow" alt="Product Image" style="max-height: 400px; object-fit: contain;">
      </div>
      
      <!-- Product Details -->
      <div class="col-md-6">
        <h1 class="fw-bold"><%= product.name %></h1>
        <h3 class="text-success mt-3">â‚¹<%= product.price %></h3>
        <p class="mt-4 text-muted"><%= product.description %></p>

        <!-- Add to Cart Button -->
        <% if (!admin) { %>
         <button onclick="addToCart('<%= product._id %>')" class="btn btn-primary btn-lg mt-4">
        Add to Cart
        </button>
        <% } %>

      </div>

    </div>
  </div>
</section>

